<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovelEvolue.Chapitre.VisualisateurChapitre"
             Title="VisualisateurChapitre">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <WebView x:Name="web"
                     Grid.Row="0"
                     Grid.Column="0"
                     Grid.ColumnSpan="2" />
            <Button x:Name="BoutonPrecedent"
                    Text="Précédent"
                    Grid.Row="1"
                    Grid.Column="0"
                    Clicked="ButtonPrecedent_Clicked" />
            <Button x:Name="BoutonSuivant"
                    Text="Suivant"
                    Grid.Row="1"
                    Grid.Column="1"
                    Clicked="ButtonSuivant_Clicked" />
        </Grid>
    </ContentPage.Content>
</ContentPage>